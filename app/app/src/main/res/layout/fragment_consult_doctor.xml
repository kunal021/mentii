<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_basic_plan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F3F3">

                <TextView
                    android:id="@+id/tv_basic_plan_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Basic consultation at ₹99"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_basic_bullet_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Chat consultation with general physicians"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_basic_plan_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_basic_bullet_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• 24/7 doctor availability"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_basic_bullet_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_basic_bullet_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Basic health guidance"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_basic_bullet_2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_basic_consult_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consult Now ➔"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_basic_doctor_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Doctor Image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/_12sdp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Standard Plan - ₹199 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_standard_plan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F3F3">

                <TextView
                    android:id="@+id/tv_standard_plan_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Consult with specialists at just ₹199"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_standard_bullet_point_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• 24/7 availability of doctors"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_standard_plan_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_standard_bullet_point_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Experienced specialists"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_standard_bullet_point_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_standard_bullet_point_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Quick consultation process"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_standard_bullet_point_2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_standard_consult_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consult Now ➔"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_standard_doctor_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Doctor Image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/_12sdp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Premium Plan - ₹299 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_premium_plan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_margin="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F3F3">

                <TextView
                    android:id="@+id/tv_premium_plan_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Premium consultation at ₹299"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_premium_bullet_point_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Priority access to senior specialists"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_premium_plan_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_premium_bullet_point_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Comprehensive health assessment"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_premium_bullet_point_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_premium_bullet_point_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="• Follow-up consultation included"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_premium_bullet_point_2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_premium_consult_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consult Now ➔"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_premium_doctor_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Doctor Image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/_12sdp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>